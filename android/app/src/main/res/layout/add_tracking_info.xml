<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/background_gray">

    <TextView
        android:id="@+id/add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tutum_pink"
        android:text="새로운 택배"
        android:textColor="@color/tutum_text_color"
        android:textSize="25dp"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/add_back_button"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="#00ff0000"
        android:text="뒤로"
        android:textColor="@color/tutum_text_color"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="right"
        android:background="#00ff0000"
        android:text="추가"
        android:textColor="@color/tutum_text_color"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/add_delivery_company"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/add_title"
        android:text="택배사"
        android:textColor="@color/tutum_text_color"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/add_delivery_company_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_delivery_company"
        android:text="택배사를 선택해주세요."
        android:textColor="@color/tutum_text_color"
        android:textSize="23dp"/>

    <TextView
        android:id="@+id/add_invoice_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_delivery_company_edit"
        android:paddingTop="10dp"
        android:text="운송장 번호"
        android:textColor="@color/tutum_text_color"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/add_invoice_num_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_invoice_num"
        />
</RelativeLayout>