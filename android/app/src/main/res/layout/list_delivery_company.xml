<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

    <TextView
        android:id="@+id/select_delivery"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/tutum_pink"
        android:text="택배사 선택"
        android:textSize="25dp"
        android:textColor="@color/tutum_text_color"
        android:gravity="center_horizontal"
        />

    <Button
        android:id="@+id/list_back_button"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="#00ff0000"
        android:text="뒤로"
        android:textColor="@color/tutum_text_color"
        android:textSize="20dp"/>

<ListView
    android:id="@+id/list_delivery_company"
    android:layout_below="@id/select_delivery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:dividerHeight="4dp"
    android:divider="#FFFFFF"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true">
</ListView>

</RelativeLayout>