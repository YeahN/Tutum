<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tutumpay_rec"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/fragment_pay_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="류예나님"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/fragment_pay_balance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000원"
                android:textSize="40dp" />

        </LinearLayout>

        <Button
            android:id="@+id/fragment_pay_reload_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="충전하기"
            android:textSize="20dp"
            android:textColor="@color/tutum_text_color"
            android:background="@color/tutum_yellow" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="1dp"
        android:text="이용내역"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>
    <ListView
        android:id="@+id/fragment_pay_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#c3c3c3"
        android:dividerHeight="1dp" />

</LinearLayout>