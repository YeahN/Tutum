<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tutum_pink"
        android:text="TUTUM PAY"
        android:textColor="@color/tutum_text_color"
        android:textSize="25dp"
        android:gravity="center_horizontal"/>

    <RelativeLayout
        android:id="@+id/pay_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_title"
        android:background="@drawable/tutumpay_rec"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/pay_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="김이화님"
            android:textColor="@color/tutum_text_color"
            android:textSize="25dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/pay_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3000원"
            android:textSize="25dp"
            android:textColor="@color/tutum_text_color"
            android:layout_below="@id/pay_username"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/pay_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/tutum_yellow"
            android:text="충전하기"
            android:textColor="@color/tutum_text_color"
            android:textSize="25dp"
            android:layout_below="@id/pay_username"
            android:layout_alignRight="@id/pay_price"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/pay_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="거래 내역"
        android:textSize="25dp"
        android:textColor="@color/tutum_text_color"
        android:layout_below="@id/pay_info"
        android:layout_marginLeft="10dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pay_list_title"
    />

</RelativeLayout>